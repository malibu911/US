}

.contact-us {
    position: relative;
    height: 868px;
    display: flex;

    &::before, &::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
    }

    &::after {
        height: 20px;
        background: url('../img/svg/convex_white.svg') 50% 50% / cover no-repeat;
        transform: rotate(180deg);
        z-index: 3;
