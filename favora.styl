        &__text, &__indexes {
            width: 760px;
        }

        &__text {
            font-weight: 600;
        }

        &__indexes {
            margin: 20px 0;
            display: flex;
            justify-content: center;
        }

        &__index {
            font-weight: bold;

            &_faster {
                margin-right: 110px;
            }
        }
    }
}

.index {
    &__percent {
        font-size: 140px;
        line-height: 100%;
    }

    &__description {
        font-size: 22px;
        line-height: 100%;
    }
}

.sales {
    padding: 200px 0 160px;
    position: relative;

    &::before {
        position: absolute;
        content: '';
        top: 0;
        left: 0;
        height: 20px;
        width: 100%;
        background: url('../img/svg/hollow_ice.svg') 50% 50% / cover no-repeat;
        transform: rotate(180deg);
    }

    &__items {
        margin: 75px auto 0;
        width: 1080px;
        height: 870px;
        box-sizing: border-box;
        display: grid;
        grid-template-columns: 310px 366px 310px;
        grid-template-rows: 1fr 1fr;
        grid-column-gap: 46px;
        grid-row-gap: 30px;
        position: relative;

        &::before {
            content: '';
            position: absolute;
            right: -246px;
            top: -150px;
            width: 545px;
            height: 967px;
            background: url('../img/svg/r_black.svg') 50% 50% / contain no-repeat;
            opacity: 0.02;
            z-index: 0;
        }
    }

    &__item {
        background: grey 50% 50% / cover no-repeat;
        border-radius: 16px;
        overflow: hidden;
        display: flex;
        transition: box-shadow 0.3s ease;
        z-index: 2;

        &:hover {
            box-shadow: 0px 2px 42px rgba(53, 59, 73, 0.28);
        }

        &_villages {
            height: 308px;
            grid-column-start: 1;
            grid-column-end: 2;
            grid-row-start: 1;
            grid-row-end: 2;
            background-image: url('../img/cottage.jpg');
        }

        &_buisness {
            height: 528px;
            align-self: end;
            grid-column-start: 1;
            grid-column-end: 2;
            grid-row-start: 1;
            grid-row-end: 3;
            background-image: url('../img/buisness.jpg');
        }

        &_elite {
            height: 440px;
            grid-column-start: 2;
            grid-column-end: 3;
            grid-row-start: 1;
            grid-row-end: 2;
            background-image: url('../img/elite.jpg');
        }

        &_lands {
            height: 308px;
            grid-column-start: 3;
            grid-column-end: 4;
            grid-row-start: 2;
            grid-row-end: 3;
            align-self: end;
            background-image: url('../img/lands.jpg');
        }

        &_comfort {
            height: 400px;
            grid-column-start: 2;
            grid-column-end: 3;
            grid-row-start: 2;
            grid-row-end: 3;
            background-image: url('../img/comfort.jpg');
        }

        &_clear {
            height: 528px;
            grid-column-start: 3;
            grid-column-end: 4;
            grid-row-start: 1;
            grid-row-end: 3;
            background-image: url('../img/clear.jpg');
        }
    }
}

.item-overlay {
    margin-top: auto;
    background: rgba(53, 59, 73, 0.85);
    width: 100%;
    height: 115px;
    transform: translateY(50px);
    transition: transform 0.4s ease;

    &:hover {
        transform: translateY(0);
    }

    &__button {
        display: block;
        margin: 22px auto 0;
        font-size: 13px;
        font-weight: 600;
        height: 30px;
        width: 200px;
        border-radius: 16px;
        color: $bg;
        border: 1px $bg solid;
        background: none;
        transition: background-color 0.4s ease, color 0.4s ease;

        &:hover {
            background-color: $bg;
            color: $mainText;
        }
    }
}

.overlay-title {
    margin-top: 21px;
    text-align: center;
    color: $bg;
    font-size: 17px;
    font-weight: 900;
}

.work-process {
    padding: 118px 80px 130px;
    background-color: $bg;
    border-radius: 40px;
    position: relative;
    box-sizing: border-box;

    &::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 377px;
        height: 224px;
        background: url('../img/svg/pattern.svg') 50% 50% / cover no-repeat;
