$mainText = #353B49;
$accent = #E7B38C;
$hoverColor = #FFCAA2;
$bg = #F2F5F9;
$postColor = #F6F9FF;

html {
    overflow-x: hidden;
    margin-right: calc(-1 * (100vw - 100%));
}

::-webkit-scrollbar-button {
    background-image: url('');
}

::-webkit-scrollbar-track {
    position: fixed;
    background-color: transparent;
}

::-webkit-scrollbar-thumb {
    -webkit-border-radius: 0px;
    border-radius: 0px;
    background-color: $accent;
}

::-webkit-scrollbar-thumb:hover {
    background-color: black;
}

::-webkit-resizer {
    background-image: url('');
    background-repeat: no-repeat;
    width: 4px;
    height: 0px;
}

::-webkit-scrollbar {
    width: 7px;
}

body {
    overflow-x: hidden;
    max-width: 100%;
    font-family: 'Montserrat', sans-serif;
    position: relative;
    color: $mainText;
    line-height: 1.4;

    img {
        width: 100%;
        vertical-align: top;
    }
}


h1, h2, h3 {
    margin: 0;
    padding: 0;
}

ul, li {
    text-decoration: none;
    list-style: none;
    padding: 0;
    margin: 0;
}

a {
    color: inherit;
    text-decoration: none;
}

button {
    outline: none;
    background: none;
    text-decoration: none;
    border: none;
    cursor: pointer;
    padding: 0;
    color: inherit;
}

main {
    position: relative;

    &::before {
        content: '';
        position: absolute;
        left: 50%;
        top: 0;
        transform: translateX(-750px);
        width: 1px;
        height: 100%;
        background-color: rgba(53, 59, 73, 0.25);
        z-index: 4;
    }
}

.wrapper {
    max-width: 1300px;
    margin: 0 auto;
    position: relative;

    &_work-process {
        width: 1080px;
    }

    &_footer {
        display: flex;
    }

    &_contact-us {
        z-index: 4;
    }
}

.header {
    padding-top: 40px;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;

    &__line {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    &__nav {
        margin-top: 18px;
        height: 42px;
        border-radius: 31px;
        border: 1px $mainText solid;
        box-sizing: border-box;
        display: flex;
        justify-content: space-around;
        align-items: center;
        font-weight: 500;
        line-height: 17px;
        font-size: 12px;

        &-item {
            position: relative;

            &::after {
                content: '';
                position: absolute;
                height: 3px;
                width: 100%;
                bottom: -4px;
                left: 0;
                background-color: $accent;
                border-radius: 110px;
                opacity: 0;
                transform: scale(0.4, 1);
                transition: opacity 0.15s ease, transform 0.2s ease;
            }

            &:hover:after {
                transform: scale(1, 1);
                opacity: 1;
            }
        }
    }
}

.logo {
    display: block;
    width: 200px;
    height: 88px;
}

.contact-me {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    font-weight: 700;
    box-sizing: border-box;

    &__email, &__tel {
        display: block;
        position: relative;
        line-height: 38px;

        &::before {
            content: '';
            position: absolute;
            left: -45px;
            top: 50%;
            transform: translateY(-50%);
            border-radius: 50%;
            height: 35px;
            width: 35px;
            color: $bg;
            background: $accent 50% 50% no-repeat;
        }
    }

    &__button-callme {
        height: 38px;
        width: 178px;
        border-radius: 45px;
        font-weight: 900;
        font-size: 12px;
        text-align: center;
        line-height: 33px;
        border: 2px $accent solid;
        box-sizing: border-box;
        transition: background-color 0.4s ease, color 0.4s ease;
        position: relative;

        &:hover {
            background-color: $accent;
            color: $bg;
        }

        &::after {
            content: 'c 9:00 до 21:00';
            position: absolute;
            line-height: 17px;
            font-size: 12px;
            font-weight: 400;
            left: 50%;
            transform: translateX(-50%);
            width: 100%;
            pointer-events: none;
            color: $mainText;
        }
    }

    &_header {
        width: 715px;
        padding-left: 45px;

        &__tel {
            margin-left: 72px;
            margin-right: auto;

            &::before {
                background-image: url('../img/svg/telephone.svg');
            }
        }

        &__email {
            &::before {
                background-image: url('../img/svg/mail.svg');
            }
        }

        &__button-callme {
            &::after {
                bottom: -23px;
            }
        }
    }

    &_footer {
        padding-top: 35px;
        margin-left: auto;

        &__tel {
            margin-right: 20px;
            color: $bg;
            font-weight: 900;
            font-size: 25px;

            &::before {
                display: none;
            }
        }

        &__button-callme {
            width: 200px;
            border-radius: 100px;
            color: $bg;

            &::after {
                top: -23px;
                color: $bg;
            }
        }
    }
}

.intro {
    padding-top: 310px;
    height: calc(100vh + 20px);
    box-sizing: border-box;
    background: url('../img/bg_1920.jpg') bottom / cover no-repeat;
    position: relative;

    &::after {
        position: absolute;
        content: '';
        bottom: 0;
        left: 0;
        height: 20px;
        width: 100%;
        background: url('../img/hollow_ice.svg') bottom / cover no-repeat;
    }
}

.get-price {
    display: block;
    text-align: center;
    line-height: 60px;
    margin-top: 30px;
    width: 268px;
    height: 60px;
    border-radius: 40px;
    color: $bg;
    background-color: $accent;
    font-size: 18px;
    font-weight: 900;
    box-shadow: 0px 6px 22px rgba(231, 179, 140, 0.7);
    transition: background-color 0.3s ease, color 0.3s ease;

    &:hover {
        background-color: $hoverColor;
        color: $mainText;
    }
}

.caption {
    display: block;
    font-size: 40px;
    line-height: 1.25;
    position: relative;
    letter-spacing: 0.01em;
    font-weight: 800;

    &::before, &::after {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 5;
    }

    &::before {
        content: '';
        left: -103px;
        height: 38px;
        width: 7px;
        background-color: $accent;
        box-shadow: 0px 0px 13px rgba(231, 179, 140, 0.6);
        border-radius: 22px;
    }

    &::after {
        content: '01';
        left: -150px;
        color: $accent;
        font-weight: 500;
        font-size: 30px;
        line-height: 125%;
        text-align: right;
        width: 40px;
    }

    &_intro {
        font-size: 32px;
        font-weight: 900;
    }
}

.section-description {
    font-weight: 400;
    font-size: 18px;
    display: block;

    &_intro {
        margin-top: 6px;
        font-size: 16px;
        line-height: 125%;
        width: 350px;
    }

    &_sales {
        padding-left: 110px;
    }

    &_feedback {
        padding-left: 106px;
    }

    &_charity {
        font-size: 20px;
        padding-left: 106px;
        position: relative;

        &::before {
            position: absolute;
            top: -222px;
            left: 106px;
            line-height: 100%;
            content: 'Благотворитиельность';
            font-size: 100px;
            font-weight: 700;
            color: $postColor;
        }
    }
}

