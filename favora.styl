            background: url('../img/svg/hollow_ice.svg') 50% 50% / cover no-repeat;
            transform: rotate(180deg);
        }

        &::after {
            background-image: url('../img/svg/convex_ice.svg');
            transform: rotate(-180deg);
        }

        &__bg {
            background-image: url('../img/house_2.png');
        }
