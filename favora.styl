    }
}

.contact-form {
    margin: 75px 0 0 215px;
    width: 392px;
    transition: opacity 0.2s ease;

    &__title {
        display: block;
        margin-bottom: 24px;
        font-size: 18px;
    }

    &__input {
        width: 392px;
        height: 60px;
        border: 2px #353B49 solid;
        background: none;
        outline: none;
        padding: 0 30px;
        font-size: 17px;
        box-sizing: border-box;
        box-shadow: inset 0px 0px 16px rgba(0, 0, 0, 0.1);
        border-radius: 50px;

        &::placeholder {
            font-family: Montserrat;
            font-size: 17px;
        }

        &-wrapper {
            margin-top: 14px;
            box-shadow: 0px 0px 16px rgba(0, 0, 0, 0.1);
            border-radius: 50px;
        }
    }

    &__button {
        font-weight: 800;
        margin-top: 32px;
        width: 392px;
        height: 60px;
        background-color: $accent;
        border-radius: 50px;
        color: $bg;
        text-align: center;
        line-height: 60px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease, color 0.3s ease;

        &:hover {
            background-color: #ffcaa2;
            box-shadow: 0px 6px 22px rgba(231, 179, 140, 0.7);
            color: #353b49;
        }
    }

    &__promise {
        display: block;
        margin-top: 12px;
        font-weight: 300;
        font-size: 14px;
