}

.process__item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 140px;
    position: relative;

    &::after {
        content: '';
        position: absolute;
        background: url('../img/svg/next.svg') 50% 50% / contain no-repeat;
        height: 124px;
        width: 124px;
        bottom: -64px;
        left: 42%;
